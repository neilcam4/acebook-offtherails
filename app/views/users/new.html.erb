<%= render 'layouts/navbar' %>

<h3 style="text-align:center">Create your account</h3>

<div>
  <%= form_for(:user, url: signup_path) do |f| %>

    <% if @user.errors.any? %>
      <div id="error_explaination">
        <h2>
          <%= pluralize(@user.errors.count, "error") %>
          prohibited this account from being created:
        </h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <div class="form-group col-md-3 col-md-offset-3">
        <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %></div>
      </div>
      <div class="form-group col-md-3">
        <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %></div>
      </div>
      <div class="form-group col-md-6 col-md-offset-3">
        <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
      </div>
      <div class="form-group col-md-6 col-md-offset-3">
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>
      <div class="form-group col-md-6 col-md-offset-3">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
      </div>

      <div class="form-group col-md-6 col-md-offset-3">
        <%= f.label "Add profile photo (optional)" %>
        <%= f.file_field :profile_photo %> 
      </div>

      <div class="form-group col-md-6 col-md-offset-3">
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
